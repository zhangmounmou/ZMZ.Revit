<Window x:Class="ZMZ.Revit.Tuna.Views.Materials"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZMZ.Revit.Tuna.Views"
        mc:Ignorable="d"
        Title="Materials"
        Height="450"
        Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Width="200"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 Margin="5"></TextBox>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="5">
            <Button x:Name="AddMaterial">创建材质</Button>
            <Button x:Name="DeleteMaterials">删除材质</Button>
        </StackPanel>
        <ListBox Grid.Row="1"
                 Margin="5" x:Name="ListMaterial">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"></TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Grid.Row="2" Margin="5">确定</Button>
    </Grid>
</Window>
